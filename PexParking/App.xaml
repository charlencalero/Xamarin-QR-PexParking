<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PexParking.App">
  <Application.Resources>
      <ResourceDictionary>

        <Color x:Key="PageBackgroundColor">Yellow</Color>
        <Color x:Key="BotonColor">Yellow</Color>
        <Color x:Key="BotonFondo">Green</Color>
        <Thickness x:Key="BotonMargin">10,0,20,10</Thickness>

       
            <Style x:Key="Boton" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="Center" />
           
                <Setter Property="WidthRequest" Value="180" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="BorderRadius" Value="30" />
                <Setter Property="BackgroundColor" Value="{StaticResource BotonFondo}" />
                <Setter Property="TextColor" Value="{StaticResource BotonColor}" />
                <Setter Property="Margin" Value="{StaticResource BotonMargin}" />
             
            </Style>


                 
        <Color x:Key="EntryColor">Black</Color>
        <Color x:Key="EntryFondo">White</Color>
       
  
       
            <Style x:Key="Texto" TargetType="Editor">
                <Setter Property="HorizontalOptions" Value="Center" />
           <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="WidthRequest" Value="250" />
       
                  <Setter Property="HeightRequest" Value="40" />
                <Setter Property="BackgroundColor" Value="{StaticResource EntryFondo}" />
                <Setter Property="TextColor" Value="{StaticResource EntryColor}" />
            
             
            </Style> 
      

    </ResourceDictionary>
    </Application.Resources>
</Application>
